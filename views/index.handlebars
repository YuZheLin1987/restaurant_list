{{!-- search bar --}}
<div class="container search-bar">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-sm-3">
        <div class="col-3 search-bar-outer">
          <form action="/search">
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-search"></i></span>
              <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
                value="{{keyword}}" aria-describedby="search-button">
            </div>
          </form>
        </div>
        <div class="col-3"></div>
        <!-- Example split danger button -->
        <div class="col-3 btn-group dropdown-outer">
          <button type="button" class="btn btn-major col-10">Sort</button>
          <button type="button" class="btn btn-major col-2 dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"
            aria-expanded="false">
            <span class="visually-hidden">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">A -> Z</a></li>
            <li><a class="dropdown-item" href="#">Z -> A</a></li>
            <li><a class="dropdown-item" href="#">類別</a></li>
            <li><a class="dropdown-item" href="#">地區</a></li>
          </ul>
        </div>
      </div>
    </div>    
  </div>
</div>

{{!-- restaurant list --}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-sm-3">
        {{!-- render with for loop --}}
        {{#each restaurant}}
        <div class="col">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill text-bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fa-solid fa-star"></i>
              </span>
            </div>
            <div class="card-footer p-3 text-end">
              <a href="/restaurants/{{ this._id }}" class="btn btn-major">detail</a>
              <a href="/restaurants/{{ this._id }}/edit" class="btn btn-major">edit</a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-major" onclick="confirmDelete(event)">delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script>
  function confirmDelete(event) {
    if (confirm('Do you really want to delete?') === false) {
      event.preventDefault()
    }
  }
</script>